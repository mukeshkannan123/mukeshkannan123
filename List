package week3.day2;

import java.awt.List;
import java.util.ArrayList;

public class LearnList {
	//set
	//List<String> listValue=new ArrayList<String>();
	//<> generic---what type of datas in the list
	
	public static void main(String[] args) {
		ArrayList<Integer> listValues=new ArrayList<Integer>();
		listValues.add(12);
		listValues.add(13);
		listValues.add(14);
		System.out.println(listValues);
		
//get the values from the list
	Integer integer=listValues.get(0);
	listValues.add(0,15);
	System.out.println(listValues);
	
	int size=listValues.get(0);
	System.out.println(listValues);
	
	listValues.remove(3);
	System.out.println(listValues);
	//claer all values in the list
	listValues.clear();
	System.out.println(listValues);
	
	boolean contains=listValues.contains(13);
	System.out.println(contains);
	
	boolean contains1=listValues.equals(15);
	System.out.println(contains1);
	}
}

	
