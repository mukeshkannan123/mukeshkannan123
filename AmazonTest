package sep072022;

import java.io.File;
import java.io.IOException;
import java.util.ArrayList;
import java.util.List;
import java.util.Set;

import org.apache.commons.io.FileUtils;
import org.openqa.selenium.By;
import org.openqa.selenium.OutputType;
import org.openqa.selenium.chrome.ChromeDriver;

import io.github.bonigarcia.wdm.WebDriverManager;

public class AmazonTest {

	public static void main(String[] args) throws IOException, InterruptedException {
		// TODO Auto-generated method stub
		//Launch Chrome
		WebDriverManager.chromedriver().setup();
		ChromeDriver driver = new ChromeDriver();
		//Load https://www.amazon.in/
		driver.get("https://www.amazon.in/");	 
		driver.manage().window().maximize();
		//	 driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(10));	
		// Type "Bags" in the Search box
		driver.findElement(By.id("twotabsearchtextbox")).sendKeys("bags for boys"); 
		//Choose the third displayed item in the result bags for women
		driver.findElement(By.xpath("//input[@id='nav-search-submit-button']")).click();
		Thread.sleep(2000);
		// Print the total number of results (like 20000)
		String totalResult = driver.findElement(By.xpath("//div[@class='a-section a-spacing-small a-spacing-top-small']")).getText().substring(13).replaceAll("[^0-9]", "");
		System.out.println(totalResult);
		// 1-48 of over 20,000 results for "bags for boys"
		
		//Select the first 2 brands in the left menu
		//   (like American Tourister, Generic) 1-48 of over 3,000 results for "bags for travelling"
		driver.findElement(By.xpath("//div[@class='a-checkbox a-checkbox-fancy s-navigation-checkbox aok-float-left'])[3]")).click();
		driver.findElement(By.xpath("//div[@class='a-checkbox a-checkbox-fancy s-navigation-checkbox aok-float-left'])[4]")).click();
		String results1 = driver.findElement(By.xpath("//div[contains(@class,'a-section a-spacing-small')]//span")).getText();
		System.out.println("Total number of results:"+results1);
		//Confirm the results have got reduced (use step 05 for compare)
		
		//Choose New Arrivals (Sort)
		driver.findElement(By.xpath("//span[text()='Featured']")).click();	
		driver.findElement(By.xpath("//a[text()='Newest Arrivals']")).click();
		//Print the first resulting bag info (name, discounted price)
		String brand = driver.findElement(By.xpath("(//span[text()='Generic'])[1]")).getText();
		System.out.println("Bag name :" + brand);
		String  bagprice= driver.findElement(By.xpath("//span[text()='359']")).getText();
		System.out.println("BAG PRICE: " +bagprice);
		//Confirm the color of the 'Deal of the day' is in kind of Red
		System.out.println("There is no Deal of the Day");
		//Click on the First Deal of the day
		// Confirm the price on previous and this page are same 
		driver.findElement(By.xpath("//span[text()='359']")).click();
		Set<String> windowHandles=driver.getWindowHandles();
		List<String>switchToWindow=new ArrayList<String>(windowHandles);
		driver.switchTo().window(switchToWindow.get(1));
		String price= driver.findElement(By.xpath("(//span[text()='359'])[1]")).getText();				
		System.out.println(price);
		System.out.println("There is no discount for this product");
		//Take a screenshot and close browser

		File source = driver.getScreenshotAs(OutputType.FILE);		   	  
		File dest1 = new File("./Image/shot2.png");
		FileUtils.copyFile(source, dest1);
	}
}


